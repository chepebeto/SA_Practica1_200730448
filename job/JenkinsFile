import groovy.json.JsonSlurperClassic

def jsonParse(def json) {
    new groovy.json.JsonSlurperClassic().parseText(json)
}

pipeline {
  agent any
  environment {
    appName = "variable" 
  }
stages {
        stage('Compilar') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Testear') {
            steps {
                sh 'npm test'
            }
        }
        stage('Fabric') {
            steps {
                sh 'sudo apt-get update'
                sh 'sudo apt-get upgrade'
                sh 'pip install -U pip setuptools'
                sh 'pip install setuptools-rust'               
                sh 'pip3 install fabric'                
                sh 'python3 ${WORKSPACE}/fabric/frontend.py'
            }
        }
        stage('Desplegar') {
            steps {
                sh 'sudo rm -rf /var/www/html/sa_practica1_200730448'
                sh 'sudo cp -r ${WORKSPACE}/build/ /var/www/html/sa_practica1_200730448/'
            }
        }
    }
} 